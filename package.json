{
	"name": "graphql-express-ts-starter",
	"version": "1.0.0",
	"description": "Apollo GraphQL server using Express and TS",
	"main": "server.ts",
	"scripts": {
		"tsc-dev": "nodemon --watch './**/*.ts' --exec 'ts-node' src/server.ts",
		"tsc-start": "ts-node src/server.ts",
		"watch-node": "nodemon dist/server.js",
		"node-start": "npm run build-ts && dist/server.js",
		"build-ts": "tsc",
		"watch-ts": "tsc -w"
	},
	"author": "Shabab Karim",
	"license": "MIT",
	"dependencies": {
		"apollo-server-express": "^2.25.0",
		"class-validator": "^0.13.1",
		"express": "^4.17.1",
		"graphql": "^15.5.0",
		"reflect-metadata": "^0.1.13",
		"type-graphql": "^1.1.1",
		"typedi": "^0.10.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.12",
		"@types/graphql": "^14.5.0",
		"@types/node": "^15.12.4",
		"nodemon": "^2.0.7",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.4"
	}
}
